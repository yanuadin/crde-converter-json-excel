<Window x:Class="CRDEConverterJsonExcel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRDEConverterJsonExcel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnConvertJSONToExcel" Content="Convert JSON to Excel" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnConvertJSONToExcel_Click" Width="200" Height="30" Margin="100,200,0,0"/>
        <Button x:Name="btnConvertExcelToJSON" Content="Convert Excel to JSON" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnConvertExcelToJSON_Click" Width="200" Height="30" Margin="500,150,0,0"/>
        <Button x:Name="btnConvertExcelToTxt" Content="Convert Excel to Txt" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnConvertExcelToTxt_Click" Width="200" Height="30" Margin="500,250,0,0"/>
    </Grid>
</Window>
